<!DOCTYPE html>
<html>
  <head>
    <title>Tacostagram Final</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </head>
   
  <body>
     <nav class="navbar" navbar-expand-lg navbar-light bg-light">
       <div class="container">
        <a class="navbar-brand" href="/">Tacostagram</a>
         <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
           <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarNav">
           <ul class="navbar-nav ms-auto">
             <% if @current_user %>
               <li class="nav-item">
                 <span class="navbar-text">Logged in as: <%= @current_user.username %></span>
               </li>
               <li class="nav-item">
                 <%= form_tag("/logout", method: "post", class: "nav-link") do %>
                   <input type="hidden" name="_method" value="delete">
                   <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
                 <% end %>
               </li>
               <% else %>
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users/new">Signup</a>
              </li>
             <% end %>
           </ul>
         </div>
       </div>
     </nav>
 
     <% if flash["notice"] %>
      <div class="container mt-3">
        <div class="alert alert-info alert-dismissible fade show" role="alert">
          <%= flash["notice"] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
     <% end %>

    <main class="container mt-4">
         <%= yield %>
     </main>
  </body>
</html>
